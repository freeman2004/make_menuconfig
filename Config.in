# see scripts/config-language.txt.
#
##########################################################
menu "Example Menuconfig"   # First menu
config String_Example       # suboption is string
	string "String Example"
	default "abcdef"

# If I don't choice Depend_1_example && Depend_2_example.
# Support int file          <-- This item won't appear.
	
config INT_Example
	int "Support int file"
	depends on  Depend_1_example && Depend_2_example 
	default 10
	help
	  INT_Example: default = 10.
	  
config Bool_1_Example
	bool "Bool 1 Example"
	depends on  Depend_1_example || Depend_2_example
	default n
	help
	  Bool_1_Example: default false.

config Bool_2_Example
	bool "Bool 2 Example"
	depends on Depend_1_example || Depend_2_example
	default n
	select Bool_1_Example


config Depend_1_example
	bool "Depend 1 example"
	default n



config Depend_2_example
	bool "Depend 2 example"
	default n
	help
	  Even small dogs may be forbidden on public transport and in shopping malls and
	  supermarkets.

	  Note Other provisions will address where dogs can be walked and who's responsible 
	  for any messes they leave behind.
	  
choice
	prompt "Multi Selection"   # This item have 3 subitem in it.
	default OPTION_1

	config OPTION_1
		bool "OPTION 1"

	config OPTION_2
		bool "OPTION 2"

	config OPTION_3
		bool "OPTION 3"

endchoice
endmenu
##########################################################
comment "Applets"
config Happy
	bool "Happy"
	default n
